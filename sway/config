# Global settings
default_border none
gaps outer 10
gaps inner 10
smart_gaps on

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term foot

# Input
input type:keyboard {
	xkb_layout "us"
	xkb_options "caps:escape"
	repeat_delay 300
	repeat_delay 200
}
seat seat0 xcursor_theme volantes_cursors 48

# keybinds
    bindsym $mod+Return exec $term
    bindsym $mod+i kill
    # mouse button for dragging.
    floating_modifier $mod normal
    # Reload the configuration file
    bindsym $mod+Shift+r reload
    bindsym $mod+Shift+e exec killall sway # exit sway
	# screenshots
	bindsym Print exec grim -g "$(slurp)"

# moving around
    bindsym Mod1+$left focus left
    bindsym Mod1+$down focus down
    bindsym Mod1+$up focus up
    bindsym Mod1+$right focus right
	
# Workspaces:
    bindsym $mod+$right exec ~/.config/sway/switch-workspace next
    bindsym $mod+$left exec ~/.config/sway/switch-workspace prev
    bindsym $mod+o workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+b workspace number 3
    bindsym Ctrl+Shift+l move container to workspace next
    bindsym Ctrl+Shift+h move container to workspace prev

# layout
    bindsym $mod+x splith
    bindsym $mod+v splitv
    bindsym $mod+m fullscreen

    bindsym $mod+space floating toggle
    bindsym $mod+t focus mode_toggle

# Autostart
exec $term -e tmux
